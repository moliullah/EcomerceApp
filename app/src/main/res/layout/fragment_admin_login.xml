<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AdminLoginFragment"
        android:orientation="vertical"
        android:gravity="center">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/adminEmailId"
            android:inputType="textEmailAddress"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:hint="Enter your email"></EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/adminPasswordId"
            android:inputType="textPassword"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:hint="Enter your password."></EditText>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/adminLoginBtnId"
            android:text="Login"></Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/adminErrorMessageId"
            tools:text="ErrorMessege"
            android:textSize="18dp"
            android:textStyle="bold"></TextView>
    </LinearLayout>
</layout>